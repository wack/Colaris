<h2>Fuckyou<%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal' },  :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
     <% @user.profile.build %>

    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :remember_me, input: :boolean %>
    <%= f.input :current_password %>

    <%= f.form_for :profile do |profile_form| %>
        <%= profile_form.input :addressl1,  label: "Address" %>
        <%=  profile_form.input :addressl2, label: "Address line 2" %>
        <%=  profile_form.input :city %>
        <%=  profile_form.input :state %>
        <%=  profile_form.input :zip %>
        <%=  profile_form.input :p_statement, label:"Personal Statement" %>
        <%=  profile_form.input :type, label: "User Type",  as: :radio_buttons , collection: ["Consultant", "Business"] %>
    <% end %>

  <div class="form-actions"><%= f.submit "Update",  class: 'btn btn-primary'%></div>


<% end %>

<h2>Cancel my account</h2>

<div class="form-actions"  >
    <p> <%= button_to "Cancel my account", registration_path(resource_name), class:'btn btn-primary', :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
</div>
<%= link_to "Back", :back %>
