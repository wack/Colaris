<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource, :html => {:class => 'form-horizontal' }, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :firstn %>
  <%= f.input :lastn %>
 <%= f.input :email %>
 <%= f.input :password %>
 <%= f.input :password_confirmation %>
 <%= f.input :remember_me, as: :boolean %>

  <div class='form-actions'><%= f.submit "Sign up", class:'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
