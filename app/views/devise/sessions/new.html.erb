<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal' }, :url => session_path(resource_name)) do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
  <div class='form-actions'><%= f.submit "Sign in" , class: 'btn btn-primary'%></div>
<% end %>

<%= render "devise/shared/links" %>
